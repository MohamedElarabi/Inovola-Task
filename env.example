# Expense Tracker Lite - Environment Variables

# API Configuration
API_BASE_URL=https://open.er-api.com/v6
API_TIMEOUT=30000
API_CACHE_TIMEOUT=3600000

# App Configuration
APP_NAME=Expenset.
APP_VERSION=1.0.0
DEFAULT_CURRENCY=USD
BASE_CURRENCY=USD

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=50

# Storage
EXPENSES_BOX=expenses
CURRENCIES_BOX=currencies
SETTINGS_BOX=settings

# UI Constants
DEFAULT_PADDING=16.0
SMALL_PADDING=8.0
LARGE_PADDING=24.0
BORDER_RADIUS=12.0
SMALL_BORDER_RADIUS=8.0

# Colors
PRIMARY_COLOR=0xFF2196F3
BACKGROUND_COLOR=0xFFF5F5F5
CARD_COLOR=0xFFFFFFFF
TEXT_COLOR=0xFF333333
SECONDARY_TEXT_COLOR=0xFF666666

# Animation Durations
SHORT_ANIMATION=200
MEDIUM_ANIMATION=300
LONG_ANIMATION=500

# Validation
MIN_AMOUNT=0.01
MAX_AMOUNT=999999.99
MAX_DESCRIPTION_LENGTH=500
MAX_CATEGORY_NAME_LENGTH=50

# Date Formats
DATE_FORMAT=dd/MM/yy
TIME_FORMAT=HH:mm
DATETIME_FORMAT=dd/MM/yy HH:mm

# Error Messages
NETWORK_ERROR_MESSAGE=Network error. Please check your internet connection.
SERVER_ERROR_MESSAGE=Server error. Please try again later.
UNKNOWN_ERROR_MESSAGE=An unknown error occurred.
VALIDATION_ERROR_MESSAGE=Please check your input and try again.

# Success Messages
EXPENSE_ADDED_MESSAGE=Expense added successfully!
EXPENSE_UPDATED_MESSAGE=Expense updated successfully!
EXPENSE_DELETED_MESSAGE=Expense deleted successfully!
RECEIPT_ATTACHED_MESSAGE=Receipt attached successfully!

# Development
FLUTTER_ENV=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Production
# FLUTTER_ENV=production
# DEBUG_MODE=false
# LOG_LEVEL=error
